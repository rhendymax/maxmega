<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_param_posted_payment_check_list" model="ir.ui.view">
			<field name="name">view.param.posted.payment.check.list</field>
			<field name="model">param.posted.payment.check.list</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Posted Payment Check List">
					<separator string="Posted Payment Check List" colspan="4"/>
					<label colspan="4" nolabel="1" string="This menu prints Posted Payment Check List Report"/>
					<newline/>
					<separator string="Date"  colspan="4"/>
					<field name="date_from" attrs="{'required':1}"/>
					<field name="date_to" attrs="{'required':1}"/>
					<notebook colspan="4">
						<page string="Supplier">
							<field name="supp_selection"
								on_change="onchange_supp_selection(supp_selection)" 
								colspan="4"/>
							<field name="filter_selection" colspan="4"/>
							<field name="partner_code_from" attrs="{'invisible': [('filter_selection','!=','supp_code')]}"
								options='{"quick_create": false}'
								domain="[('supplier','=',True)]" context="{'search_default_supplier':1,'default_supplier':1,'default_customer':0}"/>
							<field name="partner_code_to" attrs="{'invisible': [('filter_selection','!=','supp_code')]}"
								options='{"quick_create": false}'
								domain="[('supplier','=',True)]" context="{'search_default_supplier':1,'default_supplier':1,'default_customer':0}"/>
							<field name="supplier_code_from"
								attrs="{'invisible': [('filter_selection','!=','supp_code_input')]}"
								/>
							<field name="supplier_code_to"
								attrs="{'invisible': [('filter_selection','!=','supp_code_input')]}"/>
							<field name="partner_ids" domain="[('supplier','=',True)]" attrs="{'invisible': [('filter_selection','!=','selection_code')]}" nolabel="1" colspan="4">
								<tree>
									<field name="name"/>
									<field name="ref"/>
								</tree>
							</field>
						</page>
						<page string="Journal">
							<field name="journal_ids" domain="[('type','in',('bank','cash'))]" colspan="4" nolabel="1">
								<tree>
									<field name="code"/>
									<field name="name"/>
									<field name="type"/>
								</tree>
							</field>
						</page>
					</notebook>
					<group col="2" colspan="4">
						<button icon='gtk-cancel' special="cancel" string="Cancel" />
						<button name="create_vat" string="Print" colspan="1" type="object" icon="gtk-ok"/>
					</group>
				</form>
			</field>
		</record>

		<record id="action_param_posted_payment_check_list" model="ir.actions.act_window">
			<field name="name">Posted Payment Check List</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">param.posted.payment.check.list</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="help">This menu print Posted Payment Check List Report.</field>
		</record>

		<!--menuitem
			id="menu_posted_payment_check_list"
			name="Posted Payment Check List"
			action="action_param_posted_payment_check_list"
			parent="menu_custom_account" sequence="0"/-->
	</data>
</openerp>
