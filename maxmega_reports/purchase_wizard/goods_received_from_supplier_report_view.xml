<?xml version="1.0" encoding="utf-8"?>

<openerp>
	<data>
		<record id="goods_received_from_supplier_report_view" model="ir.ui.view">
			<field name="name">Goods Received From Supplier Report</field>
			<field name="model">goods.received.from.supplier.report</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Goods Received From Supplier Report">
					<separator string="Goods Received From Supplier Report" colspan="4"/>
					<label colspan="4" nolabel="1" string="This menu prints Goods Received From Supplier Report"/>
					<newline/>
					<notebook colspan="4">
						<page string="Product Brand">
							<field name="brand_selection" colspan="4"/>
							<field name="brand_default_from" attrs="{'invisible': [('brand_selection','!=','def')], 'required': [('brand_selection','=','def')]}"/>
							<field name="brand_default_to" attrs="{'invisible': [('brand_selection','!=','def')], 'required': [('brand_selection','=','def')]}"/>
							<field name="brand_input_from"
								attrs="{'invisible': [('brand_selection','!=','input')], 'required': [('brand_selection','=','input')]}"/>
							<field name="brand_input_to"
								attrs="{'invisible': [('brand_selection','!=','input')], 'required': [('brand_selection','=','input')]}"/>
							<field name="brand_ids"
								attrs="{'invisible': [('brand_selection','!=','selection')], 'required': [('brand_selection','=','selection')]}" nolabel="1" colspan="4">
								<tree>
									<field name="name"/>
								</tree>
							</field>
						</page>
						<page string="Date">
							<field name="date_selection" colspan="4"/>
							<field name="date_from" attrs="{'invisible': [('date_selection','!=','date_sel')], 'required': [('date_selection','=','date_sel')]}"/>
							<field name="date_to" attrs="{'invisible': [('date_selection','!=','date_sel')], 'required': [('date_selection','=','date_sel')]}"/>
						</page>
					</notebook>
				<group col="4" colspan="4">
					<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
					<button icon="gtk-print" name="check_report" string="Print as CSV" type="object" colspan="2" default_focus="1" />
				</group>
			</form>
			</field>
		</record>

		<record id="action_goods_received_from_supplier_report_menu" model="ir.actions.act_window">
			<field name="name">Goods Received From Supplier Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">goods.received.from.supplier.report</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="goods_received_from_supplier_report_view"/>
			<field name="target">new</field>
		</record>

		<menuitem icon="STOCK_PRINT" name="Goods Received From Supplier Report" parent="max_custom_report.menu_custom_purchase"
			action="action_goods_received_from_supplier_report_menu" id="menu_goods_received_from_supplier_report" sequence="4"/>

		<record id="goods_received_from_supplier_result_data_view" model="ir.ui.view">
			<field name="name">Goods Received From Supplier Report</field>
			<field name="model">goods.received.from.supplier.report</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
			<form string="Report Options">
				<field name="data" filename="filename" colspan="4" readonly="1"/>
				<field name="filename" invisible="1"/>
				<separator colspan="4"/>
				<group col="4" colspan="4">
					<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
				</group>
			</form>
			</field>
		</record>

	</data>
</openerp>
