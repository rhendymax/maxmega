<?xml version="1.0" encoding="utf-8"?>

<openerp>
	<data>
		<record id="booking_report_by_brand_view" model="ir.ui.view">
			<field name="name">Supplier Booking Report By Brand</field>
			<field name="model">booking.report.by.brand</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Supplier Booking Report By Brand">
					<separator string="Supplier Booking Report By Brand" colspan="4"/>
					<label colspan="4" nolabel="1" string="This menu prints Supplier Booking Report By Brand"/>
					<newline/>
					<notebook colspan="4">
						<page string="Product Brand">
							<field name="brand_selection" colspan="4"/>
							<field name="brand_default_from" attrs="{'invisible': [('brand_selection','!=','def')], 'required': [('brand_selection','=','def')]}"/>
							<field name="brand_default_to" attrs="{'invisible': [('brand_selection','!=','def')], 'required': [('brand_selection','=','def')]}"/>
							<field name="brand_input_from"
								attrs="{'invisible': [('brand_selection','!=','input')], 'required': [('brand_selection','=','input')]}"/>
							<field name="brand_input_to"
								attrs="{'invisible': [('brand_selection','!=','input')], 'required': [('brand_selection','=','input')]}"/>
							<field name="brand_ids"
								attrs="{'invisible': [('brand_selection','!=','selection')], 'required': [('brand_selection','=','selection')]}" nolabel="1" colspan="4">
								<tree>
									<field name="name"/>
								</tree>
							</field>
						</page>
						<page string="Date">
							<field name="date_selection" colspan="4"/>
							<field name="date_from" attrs="{'invisible': [('date_selection','!=','date_sel')], 'required': [('date_selection','=','date_sel')]}"/>
							<field name="date_to" attrs="{'invisible': [('date_selection','!=','date_sel')], 'required': [('date_selection','=','date_sel')]}"/>
						</page>
					</notebook>
					<group col="4" colspan="4">
						<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
						<button icon="gtk-print" name="check_report" string="Print as CSV" type="object" colspan="2" default_focus="1" />
					</group>
				</form>
			</field>
		</record>

		<record id="action_booking_report_by_brand_menu" model="ir.actions.act_window">
			<field name="name">Supplier Booking Report By Brand</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">booking.report.by.brand</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="booking_report_by_brand_view"/>
			<field name="target">new</field>
		</record>

		<menuitem icon="STOCK_PRINT" name="Supplier Booking Report By Brand" parent="max_custom_report.menu_custom_purchase"
			action="action_booking_report_by_brand_menu" id="menu_booking_report_by_brand" sequence="3"/>

	<record id="booking_report_by_brand_result_data_view" model="ir.ui.view">
		<field name="name">Supplier Booking Report By Brand</field>
		<field name="model">booking.report.by.brand</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
		<form string="Report Options">
		<field name="data" filename="filename" colspan="4" readonly="1"/>
		<field name="filename" invisible="1"/>
		<separator colspan="4"/>
		<group col="4" colspan="4">
			<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
		</group>
		</form>
		</field>
	</record>

	</data>
</openerp>
