<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <record id="booking_report_by_brand_view" model="ir.ui.view">
            <field name="name">Booking Report By Brand</field>
            <field name="model">booking.report.by.brand</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
		    <form string="Report Options">
			<separator string="Date"  colspan="4"/>
			<field name="date_from" attrs="{'required':1}"/>
			<field name="date_to" attrs="{'required':1}"/>
			<newline/>
			<field name="brand_ids" colspan="4"/>
			<group col="4" colspan="4">
				<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
				<button icon="gtk-print" name="check_report" string="Print as CSV" type="object" colspan="2" default_focus="1" />
			</group>
		    </form>
            </field>
        </record>

        <record id="action_booking_report_by_brand_menu" model="ir.actions.act_window">
            <field name="name">Booking Report By Brand</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">booking.report.by.brand</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="booking_report_by_brand_view"/>
            <field name="target">new</field>
        </record>

        <menuitem icon="STOCK_PRINT" name="Booking Report By Brand" parent="max_custom_report.menu_custom_purchase"
                action="action_booking_report_by_brand_menu" id="menu_booking_report_by_brand" sequence="20"/>

        <record id="booking_report_by_brand_result_data_view" model="ir.ui.view">
            <field name="name">Booking Report By Brand</field>
            <field name="model">booking.report.by.brand</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
		    <form string="Report Options">
			<field name="data" filename="filename" colspan="4" readonly="1"/>
			<field name="filename" invisible="1"/>
			<separator colspan="4"/>
			<group col="4" colspan="4">
				<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
			</group>
		    </form>
            </field>
        </record>

    </data>
</openerp>
