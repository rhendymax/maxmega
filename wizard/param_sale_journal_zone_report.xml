<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="param_sale_journal_zone_form_view" model="ir.ui.view">
            <field name="name">Sale Journal by Sales Zone Report</field>
            <field name="model">param.sale.journal.zone.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <separator string="Sales Zone" colspan="4"/>
                <field name="zone_from"/>
                <field name="zone_to"/>
                <separator string="Date" colspan="4"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <group col="2" colspan="4">
                    <button icon='gtk-cancel' special="cancel" string="Cancel" />
                    <button name="print_report" string="Print" colspan="1" type="object" icon="gtk-ok"/>
                </group>
            </field>
        </record>

        <record id="action_param_sale_journal_zone" model="ir.actions.act_window">
            <field name="name">Sale Journal by Sales Zone Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">param.sale.journal.zone.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="param_sale_journal_zone_form_view"/>
            <field name="target">new</field>
        </record>

        <!--<menuitem
            id="menu_param_sale_journal_zone"
            action="action_param_sale_journal_zone"
            parent="max_custom_report.menu_custom_sale"/>-->

    </data>
</openerp>
