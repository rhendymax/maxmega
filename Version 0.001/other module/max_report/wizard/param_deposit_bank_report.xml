<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="param_deposit_bank_form_view" model="ir.ui.view">
            <field name="name">Deposit Bank Report</field>
            <field name="model">param.deposit.bank.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <separator string="Date" colspan="4"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <separator string="Bank" colspan="4"/>
                <field name="bank_code_from"/>
                <field name="bank_code_to"/>
                <group col="2" colspan="4">
                    <button icon='gtk-cancel' special="cancel" string="Cancel" />
                    <button name="print_report" string="Print" colspan="1" type="object" icon="gtk-ok"/>
                </group>
            </field>
        </record>

        <record id="action_param_deposit_bank" model="ir.actions.act_window">
            <field name="name">Deposit Bank Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">param.deposit.bank.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="param_deposit_bank_form_view"/>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_param_deposit_bank"
            action="action_param_deposit_bank"
            parent="max_custom_report.menu_custom_account"/>

    </data>
</openerp>
