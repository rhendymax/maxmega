<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <record id="goods_received_from_supplier_report_view" model="ir.ui.view">
            <field name="name">Goods Received From Supplier Report</field>
            <field name="model">goods.received.from.supplier.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
		    <form string="Report Options">
			<separator string="Date"  colspan="4"/>
			<field name="date_from" attrs="{'required':1}"/>
			<field name="date_to" attrs="{'required':1}"/>
			<newline/>
			<separator string="Product Brand" colspan="4"/>
			<field name="brand_ids" colspan="4"/>
			<newline/>
			<group col="4" colspan="4">
				<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
				<button icon="gtk-print" name="check_report" string="Print as CSV" type="object" colspan="2" default_focus="1" />
			</group>
		    </form>
            </field>
        </record>

        <record id="action_goods_received_from_supplier_report_menu" model="ir.actions.act_window">
            <field name="name">Goods Received From Supplier Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">goods.received.from.supplier.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="goods_received_from_supplier_report_view"/>
            <field name="target">new</field>
        </record>

        <menuitem icon="STOCK_PRINT" name="Goods Received From Supplier Report" parent="maxmega_reports.menu_maxmega_purchase_reports"
                action="action_goods_received_from_supplier_report_menu" id="menu_goods_received_from_supplier_report" />

        <record id="goods_received_from_supplier_result_data_view" model="ir.ui.view">
            <field name="name">Goods Received From Supplier Report</field>
            <field name="model">goods.received.from.supplier.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Report Options">
		<field name="data" filename="filename" colspan="4" readonly="1"/>
		<field name="filename" invisible="1"/>
		<separator colspan="4"/>
		<group col="4" colspan="4">
			<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
		</group>
            </form>
            </field>
        </record>

    </data>
</openerp>
