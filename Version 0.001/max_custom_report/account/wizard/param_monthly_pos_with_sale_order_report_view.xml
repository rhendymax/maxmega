<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_param_monthly_pos_with_sale_order_report" model="ir.ui.view">
			<field name="name">view.param.monthly.pos.with.sale.order.report</field>
			<field name="model">param.monthly.pos.with.sale.order.report</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Param Monthly POS Report with Sale Order">
					<separator string="Param Monthly POS Report with Sale Order" colspan="4"/>
					<label colspan="4" nolabel="1" string="This menu prints Param Monthly POS Report with Sale Order"/>
					<newline/>
					<separator string="Date"  colspan="4"/>
					<field name="date_from" attrs="{'required':1}"/>
					<field name="date_to" attrs="{'required':1}"/>
					<separator string="Invoice No" colspan="4"/>
					<field name="inv_from" domain="[('type','in',['out_invoice']), ('state','in',['open','paid'])]"/>
					<field name="inv_to" domain="[('type','in',['out_invoice']), ('state','in',['open','paid'])]"/>
					<group col="2" colspan="4">
						<button icon='gtk-cancel' special="cancel" string="Cancel" />
						<button name="create_vat" string="Print" colspan="1" type="object" icon="gtk-ok"/>
					</group>
				</form>
			</field>
		</record>

		<record id="action_param_monthly_pos_with_sale_order_report" model="ir.actions.act_window">
			<field name="name">Monthly POS Report with Sale Order</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">param.monthly.pos.with.sale.order.report</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="help">This menu print Monthly POS Report with Selected Brand.</field>
		</record>

		<menuitem
			id="menu_param_monthly_pos_with_sale_order_report"
			name="Monthly POS Report with Sale Order"
			action="action_param_monthly_pos_with_sale_order_report"
			parent="menu_custom_account" sequence="8"/>
	</data>
</openerp>
