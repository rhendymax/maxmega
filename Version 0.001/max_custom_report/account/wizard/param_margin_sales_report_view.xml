<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_param_margin_sales_report" model="ir.ui.view">
			<field name="name">view.param.margin.sales.report</field>
			<field name="model">param.margin.sales.report</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Margin Sales Report">
					<separator string="Margin Sales Report" colspan="4"/>
					<label colspan="4" nolabel="1" string="This menu prints Margin Sales Report"/>
					<newline/>
					<separator string="Date"  colspan="4"/>
					<field name="date_from" attrs="{'required':1}"/>
					<field name="date_to" attrs="{'required':1}"/>
					<separator string="Invoice No" colspan="4"/>
					<field name="inv_from" domain="[('type','in',['out_invoice']), ('state','in',['open','paid'])]"/>
					<field name="inv_to" domain="[('type','in',['out_invoice']), ('state','in',['open','paid'])]"/>
					<group col="2" colspan="4">
						<button icon='gtk-cancel' special="cancel" string="Cancel" />
						<button name="create_vat" string="Print" colspan="1" type="object" icon="gtk-ok"/>
					</group>
				</form>
			</field>
		</record>

		<record id="action_param_margin_sales_report" model="ir.actions.act_window">
			<field name="name">Margin Sales Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">param.margin.sales.report</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="help">This menu print Margin Sales Report.</field>
		</record>

		<menuitem
			id="menu_param_margin_sales_report"
			name="Margin Sales Report"
			action="action_param_margin_sales_report"
			parent="menu_custom_account" sequence="9"/>
	</data>
</openerp>
