<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_param_sale_order_issued_report" model="ir.ui.view">
			<field name="name">view.param.sale.order.issued.report</field>
			<field name="model">param.sale.order.issued.report</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Sale Order Issued Report">
					<separator string="Sale Order Issued Report" colspan="4"/>
					<label colspan="4" nolabel="1" string="This menu prints Sale Order Issued Report"/>
					<newline/>
					<separator string="Date"  colspan="4"/>
					<field name="date_from" attrs="{'required':1}"/>
					<field name="date_to" attrs="{'required':1}"/>
					<separator string="Customer" colspan="4"/>
					<field name="partner_code_from" options='{"quick_create": false}'
						domain="[('customer','=',True)]" context="{'search_default_customer':1}"/>
					<field name="partner_code_to" options='{"quick_create": false}'
						domain="[('customer','=',True)]" context="{'search_default_customer':1}"/>
					<group col="2" colspan="4">
						<button icon='gtk-cancel' special="cancel" string="Cancel" />
						<button name="create_vat" string="Print" colspan="1" type="object" icon="gtk-ok"/>
					</group>
				</form>
			</field>
		</record>

		<record id="action_param_sale_order_issued_report" model="ir.actions.act_window">
			<field name="name">Sale Order Issued Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">param.sale.order.issued.report</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="help">This menu print Sale Order Issued Report.</field>
		</record>

		<menuitem
			id="menu_param_sale_order_issued_report"
			name="Sale Order Issued Report"
			action="action_param_sale_order_issued_report"
			parent="menu_custom_sale" sequence="2"/>
	</data>
</openerp>
